{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "*": ["./src/*"]
    },
    "typeRoots": [
      "./src/@types/*.d.ts",
      "typings/**/*.d.ts",
      "node_modules/@types",
      "./src/*.d.ts",
      "./src/@types"
    ]
  },
  "include": [
    "./src",
    "./src/*.d.ts",
    "typings/**/*.d.ts",
    "webpack.config.ts",
    "./node_modules/@types",
    "./src/@types/*.d.ts"
  ],
  "exclude": [
    "**/*.js"
  ]
}
